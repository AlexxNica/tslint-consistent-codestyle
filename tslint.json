{
  "rulesDirectory": [
    "./rules"
  ],
  "rules": {
    "adjacent-overload-signatures": true,
    "array-type": [
      true,
      "array-simple"
    ],
    "arrow-parens": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "eofline": true,
    "forin": true,
    "indent": [true, "spaces"],
    "max-line-length": [true, 140],
    "member-access": true,
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "no-console": [true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-eval": true,
    "no-invalid-this": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-unused-new": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "one-line": [true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-finally",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "prefer-for-of": true,
    "quotemark": [
      true, 
      "single"
    ],
    "radix": true,
    "semicolon": [true, "always"],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": "always"
    }],
    "triple-equals": [true, "allow-null-check"],
    "typedef-whitespace": [true, {
      "call-signature": "nospace",
      "index-signature": "nospace",
      "parameter": "nospace",
      "property-declaration": "nospace",
      "variable-declaration": "nospace"
    }],
    "use-isnan": true,
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    /* custom rules */
    "naming-convention": [
      true,
      {"type": "default", "format": "camelCase", "leadingWhitespace": "forbid", "trailingWhitespace": "forbid"},
      {"type": "variable", "modifiers": ["global", "const"], "format": "UPPER_CASE"},
      {"type": "parameter", "modifiers": "local", "leadingUnderscore": "allow"},
      {"type": "member", "modifiers": "private", "leadingUnderscore": "require"},
      {"type": "member", "modifiers": "protected", "leadingUnderscore": "require"},
      {"type": "property", "modifiers": ["public", "static", "const"], "format": "UPPER_CASE"},
      {"type": "type", "format": "PascalCase"},
      {"type": "class", "modifiers": "abstract", "prefix": "Abstract"},
      {"type": "interface", "prefix": "I"},
      {"type": "genericTypeParameter", "prefix": "T"}
    ],
    "no-else-after-return": true,
    "no-return-undefined": true,
    "no-var-before-return": true,
    "parameter-properties": [
      true,
      "leading",
      "member-access"
    ]
  }
}